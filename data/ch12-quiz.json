{
  "sections": {
    "prepositions": {
      "id": "ch12-prepositions",
      "title": "Prepositions",
      "questions": [
        {
          "id": "q1",
          "type": "mcq",
          "stem": "Which preposition is correct?",
          "options": [
            { "label": "different from", "correct": true },
            { "label": "different than", "correct": false },
            { "label": "different to", "correct": false },
            { "label": "different with", "correct": false }
          ],
          "rationale": "In Canadian English, use 'different from' rather than 'different than'.",
          "ref": "§12.02"
        },
        {
          "id": "q2",
          "type": "mcq",
          "stem": "Complete: 'comply _____ the regulations'",
          "options": [
            { "label": "to", "correct": false },
            { "label": "with", "correct": true },
            { "label": "by", "correct": false },
            { "label": "on", "correct": false }
          ],
          "rationale": "Use 'comply with' not 'comply to'.",
          "ref": "§12.02"
        },
        {
          "id": "q3",
          "type": "fill-blank",
          "stem": "She is responsible _____ the budget.",
          "answer": "for",
          "rationale": "Use 'responsible for' when referring to duties or obligations.",
          "ref": "§12.02"
        }
      ]
    },
    "affect-effect": {
      "id": "ch12-affect-effect",
      "title": "Affect vs Effect",
      "questions": [
        {
          "id": "q4",
          "type": "mcq",
          "stem": "Choose the correct sentence:",
          "options": [
            { "label": "The rain will effect our plans.", "correct": false },
            { "label": "The rain will affect our plans.", "correct": true },
            { "label": "The rain will have an affect on our plans.", "correct": false },
            { "label": "The affect of rain is significant.", "correct": false }
          ],
          "rationale": "'Affect' is typically a verb meaning to influence; 'effect' is typically a noun meaning result.",
          "ref": "§12.03"
        },
        {
          "id": "q5",
          "type": "fill-blank",
          "stem": "The _____ of the new policy was immediate.",
          "answer": "effect",
          "rationale": "Use 'effect' as a noun meaning result or consequence.",
          "ref": "§12.03"
        }
      ]
    },
    "compose-comprise": {
      "id": "ch12-compose-comprise",
      "title": "Compose vs Comprise",
      "questions": [
        {
          "id": "q6",
          "type": "mcq",
          "stem": "Which sentence is correct?",
          "options": [
            { "label": "The committee is comprised of five members.", "correct": false },
            { "label": "The committee comprises five members.", "correct": true },
            { "label": "Five members comprise the committee.", "correct": false },
            { "label": "The committee is composed from five members.", "correct": false }
          ],
          "rationale": "'Comprise' means 'to include' - the whole comprises the parts.",
          "ref": "§12.04"
        },
        {
          "id": "q7",
          "type": "fill-blank",
          "stem": "The report is _____ of three sections.",
          "answer": "composed",
          "rationale": "Use 'composed of' - the parts compose the whole.",
          "ref": "§12.04"
        }
      ]
    },
    "less-fewer": {
      "id": "ch12-less-fewer",
      "title": "Less vs Fewer",
      "questions": [
        {
          "id": "q8",
          "type": "mcq",
          "stem": "Which is correct?",
          "options": [
            { "label": "Less people attended than expected.", "correct": false },
            { "label": "Fewer people attended than expected.", "correct": true },
            { "label": "Less individuals came to the meeting.", "correct": false },
            { "label": "Fewer water was consumed.", "correct": false }
          ],
          "rationale": "Use 'fewer' with countable nouns (people), 'less' with uncountable nouns (water).",
          "ref": "§12.05"
        },
        {
          "id": "q9",
          "type": "error-spot",
          "stem": "Click on the error:",
          "text": "We need less employees and more efficiency",
          "errorIndex": 2,
          "rationale": "Should be 'fewer employees' because employees are countable."
        }
      ]
    },
    "that-which": {
      "id": "ch12-that-which",
      "title": "That vs Which",
      "questions": [
        {
          "id": "q10",
          "type": "mcq",
          "stem": "Which sentence correctly uses restrictive clause?",
          "options": [
            { "label": "The report, which was submitted yesterday, needs revision.", "correct": false },
            { "label": "The report that was submitted yesterday needs revision.", "correct": true },
            { "label": "The report which was submitted yesterday needs revision.", "correct": false },
            { "label": "The report, that was submitted yesterday, needs revision.", "correct": false }
          ],
          "rationale": "Use 'that' for restrictive clauses (no commas) to specify which report.",
          "ref": "§12.06"
        },
        {
          "id": "q11",
          "type": "fill-blank",
          "stem": "Our office, _____ is located downtown, opens at 8 AM.",
          "answer": "which",
          "rationale": "Use 'which' for non-restrictive clauses with commas.",
          "ref": "§12.06"
        }
      ]
    },
    "common-errors": {
      "id": "ch12-common-errors",
      "title": "Common Usage Errors",
      "questions": [
        {
          "id": "q12",
          "type": "mcq",
          "stem": "Which sentence uses 'between' correctly?",
          "options": [
            { "label": "Choose between the three options.", "correct": false },
            { "label": "Choose between the two options.", "correct": true },
            { "label": "Choose between all the options.", "correct": false },
            { "label": "Choose between these many choices.", "correct": false }
          ],
          "rationale": "Use 'between' for two items; use 'among' for three or more.",
          "ref": "§12.07"
        },
        {
          "id": "q13",
          "type": "mcq",
          "stem": "Which is correct?",
          "options": [
            { "label": "The data are conclusive.", "correct": true },
            { "label": "The data is conclusive.", "correct": false },
            { "label": "The datas are conclusive.", "correct": false },
            { "label": "The datum are conclusive.", "correct": false }
          ],
          "rationale": "'Data' is the plural of 'datum' and takes plural verbs.",
          "ref": "§12.07"
        }
      ]
    },
    "idioms": {
      "id": "ch12-idioms",
      "title": "Canadian Idioms",
      "questions": [
        {
          "id": "q14",
          "type": "mcq",
          "stem": "Which expression is preferred in Canadian English?",
          "options": [
            { "label": "I could care less", "correct": false },
            { "label": "I couldn't care less", "correct": true },
            { "label": "I don't care less", "correct": false },
            { "label": "I won't care less", "correct": false }
          ],
          "rationale": "'I couldn't care less' is the logical form - it's impossible to care less than you do.",
          "ref": "§12.08"
        },
        {
          "id": "q15",
          "type": "fill-blank",
          "stem": "The meeting was cancelled due _____ bad weather.",
          "answer": "to",
          "rationale": "In Canadian English, use 'due to' (not 'due because of').",
          "ref": "§12.08"
        }
      ]
    }
