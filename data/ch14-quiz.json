        {
          "id": "q14",
          "type": "mcq",
          "stem": "When should you mention someone's age?",
          "options": [
            { "label": "Always, for completeness", "correct": false },
            { "label": "Only when relevant to the context", "correct": true },
            { "label": "Never", "correct": false },
            { "label": "Only for older people", "correct": false }
          ],
          "rationale": "Mention age only when it's relevant to the context, just like other personal characteristics.",
          "ref": "§14.05"
        }
      ]
    },
