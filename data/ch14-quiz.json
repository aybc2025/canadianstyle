{
  "sections": {
    "gender-inclusive": {
      "id": "ch14-gender-inclusive",
      "title": "Gender-Inclusive Language",
      "questions": [
        {
          "id": "q1",
          "type": "mcq",
          "stem": "Which salutation is most appropriate when the addressee's gender is unknown?",
          "options": [
            { "label": "Dear Sir", "correct": false },
            { "label": "Dear Sir or Madam", "correct": true },
            { "label": "Dear Gentleman", "correct": false },
            { "label": "To Whom It May Concern", "correct": false }
          ],
          "rationale": "Use 'Dear Sir or Madam' or 'Dear Madam or Sir' when gender is unknown.",
          "ref": "§14.02"
        },
        {
          "id": "q2",
          "type": "mcq",
          "stem": "Which demonstrates parallel treatment?",
          "options": [
            { "label": "Mr. Smith and Mrs. Johnson", "correct": false },
            { "label": "John Smith and Mrs. Johnson", "correct": false },
            { "label": "Mr. Smith and Ms. Johnson", "correct": true },
            { "label": "John and Mrs. Johnson", "correct": false }
          ],
          "rationale": "Use parallel titles: both Mr./Ms. or both first names, not mixed.",
          "ref": "§14.03"
        },
        {
          "id": "q3",
          "type": "mcq",
          "stem": "Which sentence avoids gender bias?",
          "options": [
            { "label": "Each employee should submit his report by Friday.", "correct": false },
            { "label": "Each employee should submit his or her report by Friday.", "correct": false },
            { "label": "Employees should submit their reports by Friday.", "correct": true },
            { "label": "Each employee should submit their report by Friday.", "correct": false }
          ],
          "rationale": "Using plural forms ('employees...their') avoids gender bias naturally.",
          "ref": "§14.04"
        },
        {
          "id": "q4",
          "type": "fill-blank",
          "stem": "Replace 'manpower' with _____.",
          "answer": "workforce",
          "alternatives": ["personnel", "staff", "human resources"],
          "rationale": "'Workforce', 'personnel', or 'staff' are gender-neutral alternatives to 'manpower'.",
          "ref": "§14.06"
        },
        {
          "id": "q5",
          "type": "drag-drop",
          "stem": "Match the gender-biased terms with their inclusive alternatives:",
          "options": [
            { "label": "chairman → chairperson", "order": 1 },
            { "label": "mailman → mail carrier", "order": 2 },
            { "label": "fireman → firefighter", "order": 3 },
            { "label": "stewardess → flight attendant", "order": 4 }
          ],
          "rationale": "Use gender-neutral job titles that focus on the function, not gender.",
          "ref": "§14.06"
        }
      ]
    },
    "racial-cultural": {
      "id": "ch14-racial-cultural",
      "title": "Racial & Cultural Sensitivity",
      "questions": [
        {
          "id": "q6",
          "type": "mcq",
          "stem": "When should you mention someone's race or ethnicity?",
          "options": [
            { "label": "Always, for completeness", "correct": false },
            { "label": "Never, it's not relevant", "correct": false },
            { "label": "Only when directly relevant to the context", "correct": true },
            { "label": "Only in government documents", "correct": false }
          ],
          "rationale": "Mention race or ethnicity only when it's directly relevant to the topic being discussed.",
          "ref": "§14.10"
        },
        {
          "id": "q7",
          "type": "mcq",
          "stem": "Which is the preferred approach for identifying ethnic groups?",
          "options": [
            { "label": "Use terms from 50 years ago", "correct": false },
            { "label": "Use the terms the groups prefer for themselves", "correct": true },
            { "label": "Use the shortest terms available", "correct": false },
            { "label": "Avoid any specific terms", "correct": false }
          ],
          "rationale": "Use the terms that ethnic and racial groups prefer for themselves, which may evolve over time.",
          "ref": "§14.12"
        },
        {
          "id": "q8",
          "type": "mcq",
          "stem": "How should you refer to Indigenous peoples in Canada?",
          "options": [
            { "label": "Use specific nation names when known", "correct": true },
            { "label": "Always use 'Native'", "correct": false },
            { "label": "Always use 'Indian'", "correct": false },
            { "label": "Use any traditional term", "correct": false }
          ],
          "rationale": "Use specific nation names (Mi'kmaq, Cree, etc.) when known, or 'Indigenous peoples' as a general term.",
          "ref": "§14.12"
        },
        {
          "id": "q9",
          "type": "error-spot",
          "stem": "Click on the gratuitous modifier:",
          "text": "The talented Black musician performed brilliantly",
          "errorIndex": 2,
          "rationale": "Unless race is relevant to the context, it shouldn't be mentioned."
        }
      ]
    },
    "disabilities": {
      "id": "ch14-disabilities",
      "title": "People with Disabilities",
      "questions": [
        {
          "id": "q10",
          "type": "mcq",
          "stem": "Which demonstrates person-first language?",
          "options": [
            { "label": "The disabled employee", "correct": false },
            { "label": "The employee with a disability", "correct": true },
            { "label": "The handicapped worker", "correct": false },
            { "label": "The wheelchair-bound person", "correct": false }
          ],
          "rationale": "Person-first language puts the person before the disability: 'person with a disability'.",
          "ref": "§14.13"
        },
        {
          "id": "q11",
          "type": "mcq",
          "stem": "Which term should you avoid?",
          "options": [
            { "label": "person who uses a wheelchair", "correct": false },
            { "label": "person with autism", "correct": false },
            { "label": "wheelchair-bound", "correct": true },
            { "label": "person who is blind", "correct": false }
          ],
          "rationale": "Avoid 'wheelchair-bound' or 'confined to a wheelchair'; use 'uses a wheelchair'.",
          "ref": "§14.15"
        },
        {
          "id": "q12",
          "type": "fill-blank",
          "stem": "Instead of 'suffers from diabetes,' write 'has _____.'",
          "answer": "diabetes",
          "rationale": "Use neutral language: 'has' rather than 'suffers from' or 'is a victim of'.",
          "ref": "§14.14"
        }
      ]
    },
