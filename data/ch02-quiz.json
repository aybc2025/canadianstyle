    "title": "Compound Words",
    "questions": [
      {
        "id": "q1",
        "type": "mcq",
        "stem": "Which compound noun is correctly hyphenated?",
        "options": [
          { "label": "attorney general", "correct": false },
          { "label": "attorney-general", "correct": true },
          { "label": "attorneygeneral", "correct": false },
          { "label": "attorney—general", "correct": false }
        ],
        "rationale": "Compound titles like 'attorney-general' require a hyphen.",
        "ref": "§2.02"
      },
      {
        "id": "q2",
        "type": "multi-select",
        "stem": "Select all correctly written compound nouns:",
        "options": [
          { "label": "co-worker", "correct": true },
          { "label": "database", "correct": true },
          { "label": "air-conditioning", "correct": false },
          { "label": "air conditioning", "correct": true }
        ],
        "rationale": "Some compounds are written as one word (database), others as two words (air conditioning), and some with hyphens (co-worker)."
      },
      {
        "id": "q3",
        "type": "fill-blank",
        "stem": "The ___ effect requires careful study.",
        "answer": "cause-and-effect",
        "alternatives": ["cause and effect"],
        "rationale": "When used as a compound adjective before a noun, use hyphens.",
        "ref": "§2.04"
      }
    ]
  },
  "adjectives": {
    "id": "ch02-adjectives",
    "title": "Compound Adjectives",
    "questions": [
      {
        "id": "q4",
        "type": "mcq",
        "stem": "Which sentence uses compound adjectives correctly?",
        "options": [
          { "label": "The well known author spoke.", "correct": false },
          { "label": "The well-known author spoke.", "correct": true },
          { "label": "The author is well-known.", "correct": false },
          { "label": "The author is well known.", "correct": true }
        ],
        "rationale": "Hyphenate compound adjectives before a noun, but not after.",
        "ref": "§2.04"
      },
      {
        "id": "q5",
        "type": "error-spot",
        "stem": "Click on the hyphenation error:",
        "text": "The twenty five year old building needs renovation",
        "errorIndex": 1,
        "rationale": "Should be 'twenty-five-year-old' when used as a compound adjective."
      },
      {
        "id": "q6",
        "type": "drag-drop",
        "stem": "Order these from most to least hyphens needed:",
        "options": [
          { "label": "mother-in-law's house", "order": 1 },
          { "label": "up-to-date information", "order": 2 },
          { "label": "highly qualified candidate", "order": 3 }
        ],
        "rationale": "Adverbs ending in -ly don't require hyphens in compounds."
      }
    ]
  },
  "prefixes": {
    "id": "ch02-prefixes",
    "title": "Prefixes and Hyphenation",
    "questions": [
      {
        "id": "q7",
        "type": "mcq",
        "stem": "Which word with a prefix is correctly written?",
        "options": [
          { "label": "co-operate", "correct": false },
          { "label": "cooperate", "correct": true },
          { "label": "re-examine", "correct": true },
          { "label": "reexamine", "correct": false }
        ],
        "rationale": "Use a hyphen with prefixes before a word starting with the same vowel.",
        "ref": "§2.07"
      },
      {
        "id": "q8",
        "type": "multi-select",
        "stem": "Which require hyphens after the prefix? (Select all)",
        "options": [
          { "label": "ex-president", "correct": true },
          { "label": "self-evident", "correct": true },
          { "label": "predetermined", "correct": false },
          { "label": "non-Canadian", "correct": true }
        ],
        "rationale": "Ex-, self-, and prefixes before proper nouns require hyphens."
      }
    ]
  },
