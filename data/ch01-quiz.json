    "questions": [
      {
        "id": "sc-001",
        "type": "mcq",
        "stem": "Which sentence correctly uses capital letters?",
        "options": [
          {
            "label": "the Government of canada announced new policies.",
            "correct": false
          },
          {
            "label": "The government of Canada announced new policies.",
            "correct": true
          },
          {
            "label": "The Government Of Canada Announced New Policies.",
            "correct": false
          },
          {
            "label": "the government of canada announced new policies.",
            "correct": false
          }
        ],
        "rationale": "Capitalize the first word of a sentence and proper nouns like 'Canada', but not common nouns like 'government' unless they're part of an official title.",
        "ref": "§1.02"
      },
      {
        "id": "sc-002",
        "type": "mcq",
        "stem": "Choose the correctly capitalized sentence:",
        "options": [
          {
            "label": "we met the Minister yesterday.",
            "correct": false
          },
          {
            "label": "We met the minister yesterday.",
            "correct": true
          },
          {
            "label": "We Met The Minister Yesterday.",
            "correct": false
          },
          {
            "label": "we met the minister yesterday.",
            "correct": false
          }
        ],
        "rationale": "Start sentences with a capital letter. Use lowercase for generic titles unless referring to a specific person by their official title.",
        "ref": "§1.02"
      }
    ]
  },
